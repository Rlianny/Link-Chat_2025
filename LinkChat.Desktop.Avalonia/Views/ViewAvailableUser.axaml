<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LinkChat.Desktop.Avalonia.ViewModels"
             mc:Ignorable="d" Background="White" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LinkChat.Desktop.Avalonia.Views.ViewAvailableUser"
             x:DataType="vm:AvailableUserViewModel">
    
    <Grid>
        <Button Classes="AvailableUser" Command="{Binding ReloadChat}">
            <Grid ColumnDefinitions="100, 300, *">
                <StackPanel Grid.Column="0">
                    <Image Source="/Assets/Images/Character1.png" Width="65" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>  
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Spacing="-5">
                    <TextBlock Text="{Binding UserName}" Classes="UserName"></TextBlock>
                    <TextBlock Text="{Binding LastMessage}" Classes="LastMessage"></TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="{Binding LastTimestamp}" Classes="LastTimestamp" HorizontalAlignment="Right"></TextBlock>
                </StackPanel>
            </Grid>
        </Button>
    </Grid>
    
</UserControl>
