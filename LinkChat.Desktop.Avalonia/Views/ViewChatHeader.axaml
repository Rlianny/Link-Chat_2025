<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LinkChat.Desktop.Avalonia.ViewModels"
             mc:Ignorable="d" Background="{DynamicResource TitanWhite}" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LinkChat.Desktop.Avalonia.Views.ViewChatHeader"
             x:DataType="vm:ChatHeaderViewModel">
   <Grid>
       <Border Grid.Column="0" Padding="9">
           <Grid Grid.Column="0">
               <StackPanel>
                   <TextBlock Text="{Binding Username}" Margin="2" FontSize="24" Foreground="{DynamicResource EbonyClay}"></TextBlock>
                   <TextBlock Text="{Binding UserStatus}" Margin="2" FontSize="18" Foreground="{DynamicResource FontGrey}"></TextBlock>
               </StackPanel>
           </Grid>
       </Border>
   </Grid>
    
</UserControl>
